<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MetroMessages" parent="android:Theme.Material.NoActionBar">
        <!-- Use dark theme parent -->
        <item name="android:colorBackground">@android:color/black</item>

        <!-- CRITICAL: Transparent system bars for immersive mode -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Light system bar icons (white icons on black background) -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Ensure content can draw behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Force dark theme throughout -->

        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>